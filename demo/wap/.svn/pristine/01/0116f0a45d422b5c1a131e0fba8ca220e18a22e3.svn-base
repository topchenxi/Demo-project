

// 单行溢出省略号
.f-ellipsis-1
 overflow: hidden
 text-overflow: ellipsis
 white-space: nowrap


.f-ellipsis-2
 display: -webkit-box;
 overflow : hidden;
 text-overflow: ellipsis;
 -webkit-line-clamp: 2;
 -webkit-box-orient: vertical;
 word-break: break-word

// 中心居中
.f-cenmiddle
 position: absolute
 left: 50%
 top: 50%
 transform: translate(-50%, -50%)
 -webkit-transform: translate(-50%, -50%)

//垂直居中
.f-vermiddle
 position: absolute
 top: 50%
 transform: translateY(-50%)
 -webkit-transform: translateY(-50%)

 // box-sizing
.f-boxsizing
 box-sizing: border-box

// 清除浮动
.f-clear
 overflow: hidden

// 文字换行
.f-breakword
 word-break: break-word
 word-wrap: break-word

 


 
 

